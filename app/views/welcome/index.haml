#masthead.margin-top-25.margin-bottom-25
  .curved-border
    .border.top
    .content
      .text
        %h1.color-white.littledays.margin-bottom-0 A Children's Boutique
        = link_to 'Shop Boys Bedding', boys_products_path, class: 'hollow-button margin-right-15'
        = link_to 'Shop Girls Bedding', girls_products_path, class: 'hollow-button'
      .background.full= image_tag 'masthead.jpg'
    .border.bottom

- if @products.any?
  %section#products.margin-bottom-25
    %header.with-arrow.row
      .large-2.columns.text
        %h3 Products
      .large-10.columns.arrow
        %div.hide-for-small

    - @products.in_groups_of(4) do |products|
      .row
        - products.each do |product|
          .large-3.columns.margin-bottom-20
            = render 'products/widget', product: product unless product.nil?

