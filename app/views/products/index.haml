.row.margin-top-25
  .large-2.columns
    %h4.margin-bottom-0 Categories
    = product_categories(@category)

  .large-10.columns
    - @products.in_groups_of(3) do |products|
      .row.margin-bottom-20
        - products.each do |p|
          .large-4.columns
            = render 'widget', product: p unless p.nil?
