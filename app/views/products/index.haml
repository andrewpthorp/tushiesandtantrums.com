.row.margin-top-25
  .large-12.columns
    %h1.margin-bottom-0= pluralize(@products.size, 'Product')

.row
  .large-12.columns
    %hr

.row.margin-top-25
  .large-2.columns
    %h4 Categories
    %ul
      %li= link_to 'Shop All Bedding', products_path
      %li= link_to 'Shop Boys Bedding', products_path(category: 'boys')
      %li= link_to 'Shop Girls Bedding', products_path(category: 'girls')

  .large-10.columns
    - @products.in_groups_of(3) do |products|
      .row.margin-bottom-35
        - products.each do |p|
          .large-4.columns
            = render 'widget', product: p unless p.nil?
