= form_for product do |f|
  %p
    %b Product Name
    %br
    = f.text_field :name

  %p
    %b Product Price
    %br
    = f.text_field :price

  %p
    %b Product Image
    %br
    = f.file_field :image

  %p
    %b Product Description
    %br
    = f.text_area :description

  .row
    .large-6.columns
      = link_to 'Cancel', products_path, class: 'button gray margin-bottom-0'
    .large-6.columns.text-right
      = f.submit "Save", class: 'button margin-bottom-0'
