= form_for product do |f|
  %p
    %b Product Name
    %br
    = f.text_field :name

  %p
    %b Product Price
    %br
    = f.text_field :price

  %p
    %b Product Image
    %br
    = f.file_field :image

  %p
    %b Product Description
    %br
    = f.text_area :description

  %p
    = f.submit "Save"
