- header_text ||= 'New Orders'

.row
  .large-6.columns.large-centered
    %h3.text-center= header_text

.row.margin-bottom-20
  .large-6.columns.large-centered
    %section
      %ul.margin-bottom-0
        - collection.each do |charge|
          %li.row.border-bottom.margin-bottom-10.padding-bottom-10
            .large-2.columns
              = image_tag charge.product.image
            .large-10.columns.margin-top-15
              = link_to charge.product.name, admin_charge_path(charge)
