.row
  .large-6.columns.large-centered
    .row.margin-bottom-20
      .small-5.columns
        %h3.margin-bottom-0 All Products
      .small-7.columns
        = link_to 'Create New', new_admin_product_path, class: 'action-button green small right text-center'

.row
  .large-6.columns.large-centered
    %section
      %ul.margin-bottom-0
        - @products.each do |product|
          %li.row.border-bottom.margin-bottom-10.padding-bottom-10
            .large-2.columns
              = image_tag product.image
            .large-7.columns.padding-top-5
              %p.margin-bottom-0= link_to product.name, product
              %p.margin-bottom-0.mute= number_to_currency(product.price)
            .large-3.columns.padding-top-5
              = link_to 'Actions', '#', class: 'button dropdown small right secondary', data: { dropdown: 'actions' }
              %ul#actions.f-dropdown
                %li= link_to 'Edit', edit_admin_product_path(product)
                %li= link_to 'Delete', admin_product_path(product), method: :delete, confirm: 'Are you sure?'

      %hr

      .text-right
        = paginate @products
